        padding.Parent = ScrollFrame
        padding.PaddingAll = UDim.new(0, 20)
        
        -- FIXED: Add updates content with proper text
        local updates = {
            {text = "üìã Recent Updates", size = 18, color = Window._accent, bold = true},
