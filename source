            {text = "", size = 10, color = THEME.Text, bold = false},
            {text = "üîÑ Version 2.1.0:", size = 16, color = THEME.Text, bold = true},
            {text = "‚Ä¢ Improved UI performance", size = 14, color = THEME.Text, bold = false},
