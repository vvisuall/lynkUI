-- Restoring the populateUpdatesTab function that was removed
local function populateUpdatesTab(updatesTab)
    -- Clear existing content
    for _, child in pairs(updatesTab:GetChildren()) do
        if child:IsA("GuiObject") then
            child:Destroy()
        end
    end
    
    -- Create scroll frame for updates content
    local ScrollFrame = new("ScrollingFrame", {
        Name = "UpdatesScrollFrame",
        Position = UDim2.new(0, 0, 0, 0),
        Size = UDim2.new(1, 0, 1, 0),
        BackgroundTransparency = 1,
        BorderSizePixel = 0,
        ScrollBarThickness = 6,
        ScrollBarImageColor3 = THEME.TextMuted,
        CanvasSize = UDim2.new(0, 0, 0, 0),
        AutomaticCanvasSize = Enum.AutomaticSize.Y
    })
    ScrollFrame.Parent = updatesTab
    
    local layout = new("UIListLayout")
    layout.Parent = ScrollFrame
    layout.Padding = UDim.new(0, 8)
    layout.SortOrder = Enum.SortOrder.LayoutOrder
    
    local padding = new("UIPadding")
    padding.Parent = ScrollFrame
    padding.PaddingAll = UDim.new(0, 20)
    
    -- Add updates content
    local updates = {
        {text = "üìã Recent Updates", size = 18, color = Window._accent, bold = true},
        {text = "", size = 10, color = THEME.Text, bold = false},
        {text = "üîÑ Version 2.1.0:", size = 16, color = THEME.Text, bold = true},
        {text = "‚Ä¢ Improved UI performance", size = 14, color = THEME.Text, bold = false},
        {text = "‚Ä¢ Added new script categories", size = 14, color = THEME.Text, bold = false},
        {text = "‚Ä¢ Enhanced search functionality", size = 14, color = THEME.Text, bold = false},
        {text = "", size = 10, color = THEME.Text, bold = false},
        {text = "üîÑ Version 2.0.5:", size = 16, color = THEME.Text, bold = true},
        {text = "‚Ä¢ Fixed loading issues", size = 14, color = THEME.Text, bold = false},
        {text = "‚Ä¢ Updated script database", size = 14, color = THEME.Text, bold = false},
        {text = "‚Ä¢ Improved stability", size = 14, color = THEME.Text, bold = false}
    }
    
    for i, update in ipairs(updates) do
        local updateLabel = new("TextLabel", {
            Name = "Update" .. i,
            Size = UDim2.new(1, 0, 0, update.size + 5),
            BackgroundTransparency = 1,
            Text = update.text,
            Font = update.bold and Enum.Font.GothamBold or Enum.Font.Gotham,
            TextSize = update.size,
            TextColor3 = update.color,
            TextXAlignment = Enum.TextXAlignment.Left,
            LayoutOrder = i
        })
        updateLabel.Parent = ScrollFrame
    end
end

